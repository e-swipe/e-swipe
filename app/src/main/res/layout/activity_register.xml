<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	android:id="@+id/activity_register"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:paddingBottom="@dimen/activity_vertical_margin"
	android:paddingLeft="@dimen/activity_horizontal_margin"
	android:paddingRight="@dimen/activity_horizontal_margin"
	android:paddingTop="@dimen/activity_vertical_margin"
	tools:context=".RegisterActivity">

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:orientation="vertical"
		android:weightSum="5"
		android:layout_alignParentTop="true"
		android:layout_alignParentStart="true"
		android:gravity="center_horizontal">

		<ImageView
			android:layout_width="match_parent"
            android:layout_weight="2"
			android:src="@mipmap/ic_logo"
            android:layout_height="wrap_content" />

		<LinearLayout
			android:orientation="vertical"
			android:elevation="5dp"
			android:background="@drawable/rounded_border"
			android:gravity="center"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:padding="10dp"
			android:layout_marginTop="10dp"
			android:layout_marginBottom="10dp"
            android:id="@+id/contain_ids">

			<LinearLayout
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
                android:id="@+id/contain_email">

				<TextView
					android:layout_width="0px"
					android:layout_height="match_parent"
					android:text="@string/prompt_email"
					android:layout_weight="1.18"
					android:gravity="center_vertical"
                    android:id="@+id/textView_email" />
				<EditText
					android:layout_width="0px"
					android:layout_height="match_parent"
					android:layout_weight="3.67"
					android:id="@+id/mail"/>
		    </LinearLayout>

		    <LinearLayout
			    android:layout_width="match_parent"
			    android:layout_height="wrap_content"
			    android:weightSum="5"
                android:id="@+id/contain_password">
			    <TextView
				    android:layout_width="87dp"
				    android:layout_height="match_parent"
			    	android:text="@string/prompt_password"
				    android:gravity="center_vertical"
                    android:id="@+id/textView_password" />

			    <EditText
				    android:layout_height="match_parent"
				    android:id="@+id/password"
				    android:layout_width="match_parent" />
		    </LinearLayout>

        </LinearLayout>
        <LinearLayout
            android:orientation="vertical"
            android:elevation="5dp"
            android:background="@drawable/rounded_border"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:id="@+id/contain_info">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/contain_name">
                <TextView
                    android:layout_width="0px"
                    android:layout_height="match_parent"
                    android:text="Nom"
                    android:layout_weight="1.18"
                    android:gravity="center_vertical"
                    android:id="@+id/textView_name" />
                <EditText
                    android:layout_width="0px"
                    android:layout_height="match_parent"
                    android:layout_weight="3.67"
                    android:id="@+id/name"/>
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/contain_age">

                <TextView
                    android:text="Age"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView_age"
                    android:layout_weight="1" />

                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:inputType="number"
                    android:ems="10"
                    android:id="@+id/age"
                    android:layout_weight="1" />
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/contain_sex">

                <Switch
                    android:text="Homme/Femme"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/switchSex"
                    android:layout_weight="1" />
            </LinearLayout>

        </LinearLayout>

        <Button
            android:text="Accept"
            android:layout_width="270dp"
            android:layout_height="wrap_content"
            android:id="@+id/accept_button"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp" />

    </LinearLayout>
</RelativeLayout>
